{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://oursynth.local/specs/review-packet.schema.json",
  "title": "ReviewPacketV1",
  "type": "object",
  "required": ["taskId", "summary", "failedChecks", "blocking", "proposedNextSteps", "timeboxMs"],
  "properties": {
    "version": { "type": "string", "default": "1.0" },
    "taskId": { "type": "string" },
    "summary": { "type": "string" },
    "failedChecks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["gate", "check", "evidence"],
        "properties": {
          "gate": { "type": "string", "enum": ["Bronze", "Silver", "Gold"] },
          "check": { "type": "string" },
          "evidence": { "type": "string" },
          "fixHint": { "type": ["string", "null"] }
        }
      }
    },
    "blocking": { "type": "boolean" },
    "proposedNextSteps": { "type": "array", "items": { "type": "string" } },
    "timeboxMs": { "type": "number", "minimum": 0 }
  },
  "additionalProperties": false
}