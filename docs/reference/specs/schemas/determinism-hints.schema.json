{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://oursynth.local/specs/determinism-hints.schema.json",
  "title": "DeterminismHintsV1",
  "type": "object",
  "required": ["determinism"],
  "properties": {
    "determinism": {
      "type": "object",
      "required": ["seed", "promptSnapshot", "toolConfig", "policyRefs"],
      "properties": {
        "seed": { "type": "integer" },
        "promptSnapshot": { "type": "string" },
        "toolConfig": {
          "type": "object",
          "properties": {
            "temperature": { "type": "number", "minimum": 0 },
            "topP": { "type": "number", "minimum": 0, "maximum": 1 }
          },
          "additionalProperties": true
        },
        "policyRefs": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}